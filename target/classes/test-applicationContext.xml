    <!-- Company -->
    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://localhost:5432/springbootdb" />
        <property name="username" value="postgres" />
        <property name="password" value="1234" />
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="transactionAdvice" class="TransactionAdvice">
        <property name="transactionManager" ref="transactionManager" />
    </bean>

    <bean id="transactionPointcut" class="org.springframework.aop.aspectj.AspectJExpressionPointcut">
        <property name="expression" value="execution(* *..ServiceImpl.upgrade*(..))" />
    </bean>

    <bean id="transactionAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
        <property name="advice" ref="transactionAdvice" />
        <property name="pointcut" ref="transactionPointcut" />
    </bean>

    <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />

    <bean id="userService" class="UserServiceImpl">
        <property name="userDao" ref="userDao" />
    </bean>

    <bean id="userDao" class="UserDaoJdbc">
        <property name="dataSource" ref="dataSource" />
        <property name="sqlMap">
            <map>
                <entry key="add" value="INSERT INTO auser (id, name, password, level, login, recommend) VALUES (?, ?, ?, ?, ?, ?)" />
                <entry key="get" value="SELECT * FROM auser WHERE id = ?" />
                <entry key="del" value="DELETE FROM auser" />
                <entry key="cnt" value="SELECT COUNT(*) FROM auser" />
                <entry key="getAll" value="SELECT * FROM auser ORDER BY id" />
                <entry key="upd" value="UPDATE auser SET name = ?, password = ?, level = ?, login = ?, recommend = ? WHERE id = ?" />
            </map>
        </property>
    </bean>

    <bean id="testUserService" class="UserServiceImpl$TestUserService" parent="userService" />

    <!-- AOP 설정 -->
    <aop:config>
        <aop:advisor advice-ref="transactionAdvice" pointcut="bean(*Service)" />
    </aop:config>

    <tx:advice id="transactionAdvice">
        <tx:attributes>
            <tx:method name="get*" read-only="true" />
            <tx:method name="*" />
        </tx:attributes>
    </tx:advice>

</beans>